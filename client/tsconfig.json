{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "rootDir": "..",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../packages/shared/*"],
      "@shared": ["../packages/shared/index"]
    }
  },
  "include": ["src", "../packages/shared", "vite.config.ts", "postcss.config.js", "index.html"],
  "exclude": [
    "../packages/shared/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
