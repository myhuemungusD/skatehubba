# Stripe (test mode publishable key)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Monitoring
EXPO_PUBLIC_SENTRY_DSN=

# =============================================================================
# SERVER-ONLY SECRETS
# =============================================================================

# Database (set via docker-compose DATABASE_URL override, or provide here)
