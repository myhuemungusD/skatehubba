{
  "name": "skatehubba-mobile",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "SkateHubba mobile app â€” Expo + React Native with S.K.A.T.E. battle, spot mapping, and leaderboard.",
  "scripts": {
    "start": "expo start",
    "dev": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "e2e:build:ios": "detox build --configuration ios.sim.debug",
    "e2e:test:ios": "detox test --configuration ios.sim.debug",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "e2e:test:android": "detox test --configuration android.emu.debug",
    "e2e:smoke": "detox test --configuration ios.sim.debug --testNamePattern \"Smoke\""
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@skatehubba/config": "workspace:*",
    "@skatehubba/types": "workspace:*",
    "@tanstack/react-query": "^5.90.0",
    "date-fns": "^3.6.0",
    "expo": "~54.0.0",
    "expo-application": "~7.0.0",
    "expo-auth-session": "~7.0.10",
    "expo-av": "~15.0.0",
    "expo-build-properties": "~0.14.0",
    "expo-crypto": "~15.0.8",
    "expo-location": "~18.0.0",
    "expo-network": "~7.0.0",
    "expo-router": "~4.0.0",
    "expo-status-bar": "~2.0.0",
    "expo-web-browser": "~15.0.10",
    "firebase": "^11.2.0",
    "react": "^18.3.1",
    "react-native": "~0.83.0",
    "react-native-flash-message": "^0.4.2",
    "react-native-maps": "^1.18.0",
    "react-native-safe-area-context": "^4.14.0",
    "react-native-vision-camera": "^4.6.0",
    "shared": "workspace:*",
    "zustand": "^5.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "detox": "^20.30.0",
    "jest": "^29.7.0",
    "typescript": "5.9.3"
  }
}
